<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MainFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/menu_moustique"
                    android:scaleType="center"
                    android:layout_height="150dp"
                    android:layout_width="match_parent" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/menu_moustiquaire"
                    android:layout_height="150dp"
                    android:layout_width="match_parent" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/menu_tdr"
                    android:layout_height="150dp"
                    android:layout_width="match_parent" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/menu_drug"
                    android:layout_height="150dp"
                    android:layout_width="match_parent" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/menu_docteur"
                    android:layout_height="150dp"
                    android:layout_width="match_parent" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/menu_questions"
                    android:layout_height="150dp"
                    android:layout_width="match_parent" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/menu_quiz"
                    android:layout_height="150dp"
                    android:layout_width="match_parent" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/menu_technicien"
                    android:layout_height="150dp"
                    android:layout_width="match_parent" />
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>