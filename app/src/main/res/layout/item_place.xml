<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    app:cardCornerRadius="0dp"
    android:padding="10dp"
    android:layout_margin="1px"
    android:layout_height="wrap_content">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:padding="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical" android:layout_width="0dp"
            android:layout_weight="6"
            android:padding="6dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nomPharma"
                android:layout_width="wrap_content"
                android:textColor="#55678d"
                android:textSize="20dp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_height="wrap_content"
                android:text="Nom de pharma"
                />
            <TextView
                android:id="@+id/addr_pharma"
                android:padding="2dp"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse pharma"
                />
            <TextView
                android:padding="2dp"
                android:textSize="16dp"
                android:id="@+id/villePharma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ville pharma"
                />
            <TextView
                android:padding="2dp"
                android:textSize="16dp"
                android:id="@+id/contact_1_pharma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="contact pharma"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:padding="25dp"
            android:src="@drawable/ic_wb_sunny_black_24dp"
            android:id="@+id/imageTypePharma"
            android:layout_height="match_parent" />
    </LinearLayout>

</android.support.v7.widget.CardView>
